{
  "$schema": "https://docs.renovatebot.com/renovate-schema.json",
  "ansible": {
    "fileMatch": ["^.*\\.ya?ml$"]
  },
  "timezone": "Australia/Sydney",
  "schedule": [
    "after 5pm and before 9pm on Friday",
    "after 9am and before 9pm every weekend"
  ],
  "commitMessagePrefix": "{{depName}}:",
  "commitMessageAction": "update",
  "commitMessageTopic": "to",
  "commitMessageExtra": "{{#if isMajor}}{{{prettyNewMajor}}}{{else}}{{{prettyNewVersion}}}{{/if}}",
  "prBodyTemplate": "{{{notes}}}{{{changelogs}}}{{{controls}}}"
}
