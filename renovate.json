{
  "$schema": "https://docs.renovatebot.com/renovate-schema.json",
  "ansible": {
    "fileMatch": ["^.*\\.ya?ml$"]
  },
  "timezone": "Australia/Sydney",
  "schedule": [
    "after 5pm and before 9pm on Friday",
    "after 9am and before 9pm every weekend"
  ],
  "commitMessagePrefix": "{{depName}}:",
  "commitMessageAction": "update",
  "commitMessageTopic": "version",
  "commitMessageExtra": "to {{#if isMajor}}{{{prettyNewMajor}}}{{else}}{{{prettyNewVersion}}}{{/if}}",
  "docker": {
    "commitMessageTopic": "version",
    "digests": {
      "commitMessageTopic": "digest",
      "group": {
        "commitMessageTopic": "digest"
      }
    },
    "pin": {
      "group": {
        "commitMessageTopic": "version"
      }
    },
    "group": {
      "commitMessageTopic": "version"
    }
  },
  "prBodyTemplate": "{{{notes}}}{{{changelogs}}}{{{controls}}}"
}
