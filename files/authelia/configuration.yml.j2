#jinja2: lstrip_blocks: "true", trim_blocks: "false"
---

server:
  host: 0.0.0.0
  port: 9091

theme: dark

jwt_secret: "{{ authelia_jwt_secret }}"

default_redirection_url: https://{{ application }}.{{ common_tld }}

authentication_backend:
  password_reset:
    disable: false
  refresh_interval: 5m
  ldap:
    implementation: custom
    url: ldap://{{ ldap_host }}

    username_attribute: uid
    base_dn: {{ ldap_base_dn }}

    additional_users_dn: ou={{ ldap_user_ou }}
    additional_groups_dn: ou={{ ldap_group_ou }}

    users_filter: (&({username_attribute}={input})(objectClass=person))
    groups_filter: (&(uniquemember={dn})(objectclass=groupOfUniqueNames))

    user: {{ ldap_admin_dn }}
    password: {{ ldap_admin_password }}

access_control:
  default_policy: deny
  rules:
    -
      domain_regex: "^(bazarr|glances|nzbget|peanut|prometheus|prowlarr|qbittorrent|radarr|scrutiny|sonarr|sonarr-anime).({{ common_local_tld }}|{{ common_tld }})$"
      policy: bypass
      networks: ['{{ networks.pub.prefix}}.251/32']
    -
      domain:
        - "*.{{ common_tld }}"
        - "*.{{ common_local_tld }}"
      subject:
        - "group:humans"
        - "user:blackbox_exporter"
      policy: one_factor

session:
  name: authelia_session
  secret: "{{ authelia_session_secret }}"
  domain: {{ common_tld }}
  redis:
    host: {{ _redis_hostname }}
    port: {{ _redis_port }}
    password: {{ _redis_password }}

regulation:
  max_retries: 3
  find_time: 120
  ban_time: 300

storage:
  encryption_key: "{{ authelia_storage_encryption_key }}"
  postgres:
    host: {{ _postgres_hostname }}
    port: {{ _postgres_port }}
    database: {{ _postgres_database }}
    username: "{{ _postgres_username }}"
    password: "{{ _postgres_password }}"

notifier:
  smtp:
    username: "{{ common_email_username }}"
    password: "{{ common_email_password }}"
    host: "{{ common_email_server }}"
    port: "{{ common_email_port }}"
    sender: "{{ application }}{{ common_email_to }}"
    disable_require_tls: "{{ 'false' if common_email_protocol=='tls' else 'true' }}"

log:
  file_path: /var/log/authelia/authelia.log

identity_providers:
  oidc:
    issuer_private_key: |
      {{ _authelia_private_key.privatekey | indent(6) }}
    clients:
      -
        id: outline
        description: Outline
        secret: '{{ ldap_oidc_secrets.outline | string | argon2(authelia_salt) }}'
        public: false
        authorization_policy: one_factor
        consent_mode: implicit
        redirect_uris:
          - https://outline.{{ common_tld }}/auth/oidc.callback
        scopes:
          - openid
          - offline_access
          - profile
          - email
        userinfo_signing_algorithm: none
      -
        id: guacamole
        description: Apache Guacamole
        secret: '{{ ldap_oidc_secrets.guacamole | string | argon2(authelia_salt) }}'
        public: false
        authorization_policy: one_factor
        consent_mode: implicit
        redirect_uris:
          - https://guacamole.{{ common_tld }}
        scopes:
          - openid
          - profile
          - groups
          - email
        response_types:
          - id_token
        grant_types:
          - implicit
        userinfo_signing_algorithm: none
      -
        id: gitea
        description: Gitea
        secret: '{{ ldap_oidc_secrets.gitea | string | argon2(authelia_salt) }}'
        public: false
        authorization_policy: one_factor
        consent_mode: implicit
        redirect_uris:
          - https://gitea.{{ common_tld }}/user/oauth2/authelia/callback
        scopes:
          - openid
          - email
          - profile
        userinfo_signing_algorithm: none
      -
        id: grafana
        description: Grafana
        secret: '{{ ldap_oidc_secrets.grafana | string | argon2(authelia_salt) }}'
        public: false
        authorization_policy: one_factor
        consent_mode: implicit
        redirect_uris:
          - https://grafana.{{ common_tld }}/login/generic_oauth
        scopes:
          - openid
          - profile
          - groups
          - email
        userinfo_signing_algorithm: none
      -
        id: minio
        description: MinIO
        secret: '{{ ldap_oidc_secrets.minio | string | argon2(authelia_salt) }}'
        public: false
        authorization_policy: one_factor
        consent_mode: implicit
        redirect_uris:
          - https://minio-console.{{ common_tld }}/oauth_callback
        scopes:
          - openid
          - profile
          - email
          - groups
        userinfo_signing_algorithm: none
      -
        id: portainer
        description: Portainer
        secret: '{{ ldap_oidc_secrets.portainer | string | argon2(authelia_salt) }}'
        public: false
        authorization_policy: one_factor
        consent_mode: implicit
        redirect_uris:
          - https://portainer.{{ common_tld }}
        scopes:
          - openid
          - profile
          - groups
          - email
        userinfo_signing_algorithm: none
      -
        id: nextcloud
        description: Nextcloud
        secret: '{{ ldap_oidc_secrets.nextcloud | string | argon2(authelia_salt) }}'
        public: false
        authorization_policy: one_factor
        consent_mode: implicit
        redirect_uris:
          - https://nextcloud.{{ common_tld }}/apps/oidc_login/oidc
        scopes:
          - openid
          - profile
          - email
          - groups
        userinfo_signing_algorithm: none
      -
        id: audiobookshelf
        description: Audiobookshelf
        secret: '{{ ldap_oidc_secrets.audiobookshelf | string | argon2(authelia_salt) }}'
        public: false
        authorization_policy: one_factor
        consent_mode: implicit
        redirect_uris:
          - https://audiobookshelf.{{ common_tld }}/auth/openid/callback
          - https://audiobookshelf.{{ common_tld }}/auth/openid/mobile-redirect
        scopes:
          - openid
          - profile
          - email
          - groups
        userinfo_signing_algorithm: none
      -
        id: paperless
        description: Paperless
        secret: '{{ ldap_oidc_secrets.paperless | string | argon2(authelia_salt) }}'
        public: false
        authorization_policy: one_factor
        consent_mode: implicit
