#jinja2: lstrip_blocks: "true", trim_blocks: "false"
---

title: Sprinklers
path: sprinklers
icon: mdi:sprinkler-variant

type: custom:grid-layout
layout:
  grid-template-columns: 0.2fr 4fr 5fr 5fr 0.2fr
  grid-column-gap: 20px
  grid-template-areas: |
    ". schedule stats1 stats2 ."
  mediaquery:
    "(max-width: 800px)":
      grid-template-columns: 100%
      grid-template-areas: |
        "stats1"
        "stats2"
        "schedule"

cards:
  - type: vertical-stack
    view_layout:
      grid-area: schedule
    cards:
      -
        name: 🕙 Schedule
        <<: &title_card
          type: custom:button-card
          template: card_title
      -
        type: markdown
        content: |
          | Area | Time |
          |------|------|
          {% for g in home_assistant_gardening.systems %}
          | {{ g.name }} | {% raw %}{{ '2000-01-01T{% endraw %}{{ g.time }}'{% raw %} | as_timestamp() | timestamp_custom("%I:%M %p") }}{% endraw %} |
          {% endfor %}

          | Season | Active Days |
          |--------|-------------|
          {% for k, v in home_assistant_gardening.schedule.items() %}
          | {{ k | ansible.builtin.title }} | {{ v | ansible.builtin.join(", ") }} |
          {% endfor %}
        card_mod:
          style:
            ha-markdown:
              $:
                ha-markdown-element: |
                  table {
                      width: 100%;
                      border-collapse: collapse;
                      margin: 20px 0;
                  }

                  th, td {
                      padding: 12px;
                      text-align: left;
                      border: 1px solid #dddddd;
                  }
      -
        name: ⚙️ Automations
        <<: *title_card

      {% for g in home_assistant_gardening.systems %}
      -
        type: 'custom:button-card'
        template: card_input_boolean
        entity: automation.gardening_{{ g.name | ansible.builtin.lower | ansible.builtin.replace(" ", "_") }}
        variables:
          ulm_card_input_boolean_name: {{ g.name }}
          ulm_card_input_boolean_icon: mdi:{{ g.icon }}
          ulm_card_input_boolean_force_background_color: true
      {% endfor %}

  - type: vertical-stack
    view_layout:
      grid-area: stats1
    cards:
    {% for g in home_assistant_gardening.systems %}
    {% if loop.index % 2 != 0 %}
      - type: vertical-stack
        cards:
          -
            name: {{ g.name }}
            <<: *title_card
          -
            type: entities
            entities:
              -
                type: custom:multiple-entity-row
                name: Duration
                icon: mdi:timer
                entity: sensor.smart_irrigation_{{ g.name | ansible.builtin.lower | ansible.builtin.replace(" ", "_") }}
                show_state: false
                entities:
                  - entity: sensor.smart_irrigation_{{ g.name | ansible.builtin.lower | ansible.builtin.replace(" ", "_") }}
                    name: Next
                    format: duration
                    hide_if: 0
                  - entity: sensor.linktap_{{ g.linktap }}_total_duration
                    name: Last
                    format: duration
              -
                type: custom:multiple-entity-row
                name: Bucket
                attribute: bucket
                icon: mdi:pail
                unit: mm
                entity: sensor.smart_irrigation_{{ g.name | ansible.builtin.lower | ansible.builtin.replace(" ", "_") }}
              -
                type: divider
              -
                type: custom:multiple-entity-row
                name: Water Consumed
                icon: mdi:pail-minus
                entity: sensor.linktap_{{ g.linktap }}_volume
                unit: L
              -
                type: divider
              -
                type: custom:multiple-entity-row
                name: Linktap
                icon: mdi:battery
                entity: sensor.linktap_{{ g.linktap }}_battery
                show_state: false
                entities:
                  - entity: sensor.linktap_{{ g.linktap }}_battery
                    name: Battery
                  - entity: sensor.linktap_{{ g.linktap }}_signal
                    name: Signal
    {% endif %}
    {% endfor %}

  - type: vertical-stack
    view_layout:
      grid-area: stats2
    cards:
    {% for g in home_assistant_gardening.systems %}
    {% if loop.index % 2 == 0 %}
      - type: vertical-stack
        cards:
          -
            name: {{ g.name }}
            <<: *title_card
          -
            type: entities
            entities:
              -
                type: custom:multiple-entity-row
                name: Duration
                icon: mdi:timer
                entity: sensor.smart_irrigation_{{ g.name | ansible.builtin.lower | ansible.builtin.replace(" ", "_") }}
                show_state: false
                entities:
                  - entity: sensor.smart_irrigation_{{ g.name | ansible.builtin.lower | ansible.builtin.replace(" ", "_") }}
                    name: Next
                    format: duration
                    hide_if: 0
                  - entity: sensor.linktap_{{ g.linktap }}_total_duration
                    name: Last
                    format: duration
              -
                type: custom:multiple-entity-row
                name: Bucket
                attribute: bucket
                icon: mdi:pail
                unit: mm
                entity: sensor.smart_irrigation_{{ g.name | ansible.builtin.lower | ansible.builtin.replace(" ", "_") }}
              -
                type: divider
              -
                type: custom:multiple-entity-row
                name: Water Consumed
                icon: mdi:pail-minus
                entity: sensor.linktap_{{ g.linktap }}_volume
                unit: L
              -
                type: divider
              -
                type: custom:multiple-entity-row
                name: Linktap
                icon: mdi:battery
                entity: sensor.linktap_{{ g.linktap }}_battery
                show_state: false
                entities:
                  - entity: sensor.linktap_{{ g.linktap }}_battery
                    name: Battery
                  - entity: sensor.linktap_{{ g.linktap }}_signal
                    name: Signal
    {% endif %}
    {% endfor %}
