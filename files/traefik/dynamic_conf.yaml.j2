http:
  routers:
    api:
      rule: 'Host(`traefik.{{ common_tld }}`)'
      entryPoints:
        - web-secure
      service: api@internal
      middlewares:
        - myAuth
      tls:
        certResolver: '{{ traefik_certresolver }}'
        domains:
          - main: 'traefik.{{ common_tld }}'

  middlewares:
    redirect:
      redirectScheme:
        scheme: https
    security-headers:
      headers:
        stsIncludeSubdomains: true
        stsPreload: true
        stsSeconds: 31536000

    myAuth:
      basicAuth:
        users:
          - '{{ htpasswd.username }}:{{ htpasswd.password_hashed }}'

    crowdsec-bouncer:
      forwardauth:
        address: http://crowdsec-traefik-bouncer.{{ common_local_tld }}:8080/api/v1/forwardAuth
        trustForwardHeader: true

tls:
  options:
    default:
      sniStrict: true
      minVersion: VersionTLS12
      cipherSuites:
        - TLS_ECDHE_RSA_WITH_AES_256_GCM_SHA384
        - TLS_ECDHE_RSA_WITH_CHACHA20_POLY1305_SHA256
    mintls13:
      sniStrict: true
      minVersion: VersionTLS13
