[global]
  checkNewVersion = false
  sendAnonymousUsage = false

[providers]
  [providers.docker]
    defaultRule = "Host(`{% raw %}{{ normalize .Name }}{% endraw %}.{{ common_tld }}`)"
  [providers.file]
    filename = "/dynamic_conf.toml"

[entryPoints.web]
  address = ":80/tcp"

[entryPoints.web-secure]
  address = ":443/tcp"

[entryPoints.rtmp]
  address = ":1935/tcp"

[certificatesResolvers.letsencrypt.acme]
  email = "{{ common_email_username }}"
  storage = "acme.json"
  [certificatesResolvers.letsencrypt.acme.tlsChallenge]

[api]

[entryPoints]
  [entryPoints.metrics]
    address = ":8082/tcp"

[metrics]
  [metrics.prometheus]
    entryPoint = "metrics"

[pilot]
  token = "{{ traefik_pilot_token }}"
  dashboard = false
