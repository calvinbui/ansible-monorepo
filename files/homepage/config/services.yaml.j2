#jinja2: lstrip_blocks: True, trim_blocks: False
---
# For configuration options and examples, please see:
# https://gethomepage.dev/latest/configs/services

{% for service in services %}
{% if service['items']|length == 0 %}
- {{ service.group }}: []
{% else %}
- {{ service.group }}:
  {% for item in service['items'] %}
  - {{ item.name }}:
      icon: {{ item.icon }}
      href: {{ item.url }}
      description: {{ item.description }}
      weight: {{ item.weight }}
      {% if 'widget' in item %}
      widget:
        {{ item.widget | ansible.builtin.to_json(vault_to_text=True) | ansible.builtin.from_json | ansible.builtin.to_nice_yaml | ansible.builtin.indent(8) }}
      {% endif %}
  {% endfor %}
{% endif %}
{% endfor %}
