#jinja2: lstrip_blocks: "true", trim_blocks: "false"
---

global:
  scrape_interval: 20s
  evaluation_interval: 20s

rule_files:
  - '/rules/*.yml'

scrape_configs:
  - job_name: prometheus
    static_configs:
      - targets:
          - localhost:9090

  - job_name: alertmanager
    static_configs:
      - targets:
          - alertmanager.{{ docker_network.name }}:9093

  - job_name: prometheus-docker-sd
    file_sd_configs:
      - files:
        - /prometheus-docker-sd/docker-targets.json

  - job_name: blackbox
    metrics_path: /probe
    params:
      module: [http]
    static_configs:
      - targets:
      {% for service in http_services %}
        {% if 'excludeMonitoring' not in service %}
        - {{ service.url }}
        {% endif %}
      {% endfor %}
    relabel_configs:
      - source_labels: [__address__]
        target_label: __param_target
      - source_labels: [__param_target]
        target_label: instance
      - target_label: __address__
        replacement: blackbox_exporter.{{ docker_network.name }}:9115

alerting:
  alertmanagers:
    - scheme: http
      static_configs:
        - targets:
          - alertmanager.{{ docker_network.name }}:9093
