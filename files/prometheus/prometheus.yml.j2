#jinja2: lstrip_blocks: True, trim_blocks: False
---

global:
  scrape_interval: {{ prometheus_scrape_interval }}
  evaluation_interval: {{ prometheus_scrape_interval }}
  scrape_timeout: 30s
  external_labels:
    server: homeserver

rule_files:
  - '/rules/*.yml'

scrape_config_files:
  - '/scrape_config_files/*'

scrape_configs:
  - job_name: podman_containers
    docker_sd_configs:
      - host: unix:///var/run/docker.sock
    relabel_configs:
      - # Only keep containers that have a `prometheus.enable = true` label.
        action: keep
        source_labels: [__meta_docker_container_label_prometheus_enable]
        regex: true
      - # Use the task labels that are prefixed by `prometheus(.-_)`.
        action: labelmap
        regex: __meta_docker_container_label_prometheus_(.+)
        replacement: $1
      - # replace the default port 80 with our own
        action: replace
        source_labels: [__address__, __meta_docker_container_label_prometheus_port]
        regex: ([^:]+)(?::\d+)?;(\d+)
        replacement: $1:$2
        target_label: __address__
      - # replace the scheme with our own
        action: replace
        regex: (https?)
        source_labels: [__meta_docker_container_label_prometheus_scheme]
        target_label: __scheme__
      - # replace the path with our own
        action: replace
        regex: (.+)
        source_labels: [__meta_docker_container_label_prometheus_path]
        target_label: __metrics_path__
      - # Hardcode the instance label to the server
        action: replace
        replacement: {{ inventory_hostname }}
        target_label: instance
    metric_relabel_configs:
      - regex: '(enable|path|port|scheme)'
        action: labeldrop

  - job_name: systemd_exporter
    static_configs:
      - targets:
          - nvr.{{ common_local_tld }}:9558

alerting:
  alertmanagers:
    - static_configs:
        - targets:
          - alertmanager:9093
