#jinja2: lstrip_blocks: "true", trim_blocks: "false"
---

global:
  scrape_interval: 30s
  evaluation_interval: 30s

rule_files:
  - '/rules/*.yml'

scrape_configs:
  - job_name: prometheus
    static_configs:
      - targets:
          - localhost:9090

  - job_name: alertmanager
    static_configs:
      - targets:
          - alertmanager.{{ docker_network.name }}:9093

  - job_name: prometheus-docker-sd
    scrape_timeout: 20s
    file_sd_configs:
      - files:
        - /prometheus-docker-sd/docker-targets.json

  - job_name: blackbox
    scrape_timeout: 30s
    metrics_path: /probe
    params:
      module: [http]
    file_sd_configs:
      - files:
        - /prometheus-traefik-sd/*.json
    static_configs:
      - targets:
    {% for service in services %}
      {% for item in service['items'] %}
        {% if item.monitor %}
        - {{ item.url }}
        {% endif %}
      {% endfor %}
    {% endfor %}
    relabel_configs:
      - source_labels: [__address__]
        target_label: __param_target
      - source_labels: [__param_target]
        target_label: instance
      - target_label: __address__
        replacement: blackbox_exporter.{{ docker_network.name }}:9115

alerting:
  alertmanagers:
    - scheme: http
      static_configs:
        - targets:
          - alertmanager.{{ docker_network.name }}:9093
