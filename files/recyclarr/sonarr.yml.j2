---

sonarr:
  sonarr.{{ common_tld }}:
    base_url: http://sonarr.{{ docker_network.name }}:8989
    api_key: {{ sonarr_api_key }}

    media_naming:
      episodes:
        rename: true
        standard: default
        daily: default
        anime: default
      series: plex
      season: default

    quality_definition:
      type: series

    quality_profiles:
      -
        name: 1080p
        reset_unmatched_scores:
          enabled: true
        score_set: default
        min_format_score: 0
        upgrade:
          allowed: true
          until_quality: WEB 1080p
          until_score: 10000
        quality_sort: top
        qualities:
          # disabled, but required to maintain order
          - name: Bluray-2160p Remux
            enabled: false
          - name: Bluray-2160p
            enabled: false
          - name: WEB 2160p
            enabled: false
            qualities: [WEBDL-2160p, WEBRip-2160p]
          -
            name: WEB 1080p
            qualities:
              - WEBDL-1080p
              - WEBRip-1080p
      -
        name: 4K
        reset_unmatched_scores:
          enabled: true
        score_set: default
        min_format_score: 0
        upgrade:
          allowed: true
          until_quality: WEB 2160p
          until_score: 10000
        quality_sort: top
        qualities:
          -
            name: WEB 2160p
            qualities:
              - WEBDL-2160p
              - WEBRip-2160p

    delete_old_custom_formats: true
    replace_existing_custom_formats: true

