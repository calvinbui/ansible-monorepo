---

skip_list:
  - args[module]
  - git-latest
  - jinja[invalid]
  - jinja[spacing]
  - name[play]
  - name[template]
  - no-handler
  - var-naming[no-reserved]
  - var-naming[no-role-prefix]

exclude_paths:
  - inventory.yml
  - files/
  - .gitea/

enable_list:
  - empty-string-compare
  - no-log-password
  - no-same-owner
  - yaml
