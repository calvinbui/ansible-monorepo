skip_list:
  - args[module]
  - git-latest
  - jinja[invalid]
  - jinja[spacing]
  - name[play]
  - name[template]
  - no-handler
  - no-tabs
  - template-instead-of-copy
  - var-naming[no-reserved]
  - var-naming[no-role-prefix]
  - yaml[line-length]

exclude_paths:
  - inventory.yml

enable_list:
  - empty-string-compare
  - no-log-password
  - no-same-owner
  - yaml
